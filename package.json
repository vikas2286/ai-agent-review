{
  "name": "ai-code-reviewer-simple",
  "displayName": "AI Code Reviewer by Nothing17",
  "description": "AI-powered code review using Gemini",
  "version": "1.0.3",
  "main": "./out/extension.js",
  "publisher": "Nothing17",
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vikas2286/ai-agent-review"
  },
  "homepage": "https://github.com/vikas2286/ai-agent-review",
  "bugs": {
    "url": "https://github.com/vikas2286/ai-agent-review/issues"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:aiCodeReviewer.openChat",
    "onCommand:aiCodeReviewer.reviewCurrentFile",
    "onCommand:aiCodeReviewer.reviewSelection",
    "onCommand:aiCodeReviewer.explainCode",
    "onCommand:aiCodeReviewer.setApiKey"
  ],
  "contributes": {
    "commands": [
      {
        "command": "aiCodeReviewer.setApiKey",
        "title": "Set Gemini API Key",
        "category": "AI Reviewer"
      },
      {
        "command": "aiCodeReviewer.openChat",
        "title": "AI Code Reviewer: Open Chat"
      },
      {
        "command": "aiCodeReviewer.reviewCurrentFile",
        "title": "Review Current File",
        "category": "AI Reviewer"
      },
      {
        "command": "aiCodeReviewer.reviewSelection",
        "title": "Review Selected Code",
        "category": "AI Reviewer"
      },
      {
        "command": "aiCodeReviewer.explainCode",
        "title": "Explain Code",
        "category": "AI Reviewer"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "aiCodeReviewer.openChat",
          "when": "editorTextFocus",
          "group": "navigation@1"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "aiCodeReviewer.historyView",
          "name": "AI Review History"
        }
      ]
    },
    "keybindings": [
      {
        "command": "aiCodeReviewer.reviewCurrentFile",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      },
      {
        "command": "aiCodeReviewer.openChat",
        "key": "ctrl+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "aiCodeReviewer.reviewSelection",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      },
      {
        "command": "aiCodeReviewer.explainCode",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@google/genai": "^1.34.0"
  }
}
